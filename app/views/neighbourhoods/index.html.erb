<div class="page-header">
  <h1>
    Neighbourhoods
    <a href="/neighbourhoods/new" class="btn btn-lg btn-success">New Neighbourhood</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Neighbourhoods list</th>
        <th>City</th>
        <th>Actions</th>
      </tr>

      <% @neighbourhoods.each do |neighbourhood| %>
      <tr>
        <td><%= neighbourhood.neighbourhoods_list %></td>
        <td><%= neighbourhood.city_id %></td>
        <td>
          <a href="/neighbourhoods/<%= neighbourhood.id %>" class="btn btn-primary">Show</a>
          <a href="/neighbourhoods/<%= neighbourhood.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_neighbourhood/<%= neighbourhood.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
