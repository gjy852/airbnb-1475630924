<div class="page-header">
  <h1>
    Requests
    <a href="/requests/new" class="btn btn-lg btn-success">New Request</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Requestor</th>
        <th>Request text</th>
        <th>Request sent date</th>
        <th>Request accept date</th>
        <th>Availability date</th>
        <th>Actions</th>
      </tr>

      <% @requests.each do |request| %>
      <tr>
        <td><%= request.requestor_id %></td>
        <td><%= request.request_text %></td>
        <td><%= request.request_sent_date %></td>
        <td><%= request.request_accept_date %></td>
        <td><%= request.availability_date %></td>
        <td>
          <a href="/requests/<%= request.id %>" class="btn btn-primary">Show</a>
          <a href="/requests/<%= request.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_request/<%= request.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
