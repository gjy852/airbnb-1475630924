<!-- Validation failure messages -->
<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add User</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_user" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for host -->
      <div class="form-group">
        <label for="host" class="control-label">
          Host
        </label>

        <input type="text" id="host" name="host" placeholder="Host" class="form-control" value="<%= @user.host %>">
      </div>

      <!-- Label and input for guest -->
      <div class="form-group">
        <label for="guest" class="control-label">
          Guest
        </label>

        <input type="text" id="guest" name="guest" placeholder="Guest" class="form-control" value="<%= @user.guest %>">
      </div>

      <button class="btn btn-success">
        Create User
      </button>
      or
      <a href="/users">Cancel</a>
    </form>
  </div>
</div>
