<div class="page-header">
  <h3>City #<%= @city.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>City name</dt>
      <dd><%= @city.city_name %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/cities" class="btn btn-primary">
        Back
      </a>
      <a href="/cities/<%= @city.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_city/<%= @city.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A City has many listings -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Listings
      </li>

      <% @city.listings.each do |listing| %>
        <li class="list-group-item">
          <a href="/listings/<%= listing.id %>">
            <%= listing.listing_title %>
          </a>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<!-- A City has many neighbourhoods -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Neighbourhoods
      </li>

      <% @city.neighbourhoods.each do |neighbourhood| %>
        <li class="list-group-item">
          <a href="/neighbourhoods/<%= neighbourhood.id %>">
            <%= neighbourhood.neighbourhoods_list %>
          </a>
        </li>
      <% end %>
    </ul>
  </div>
</div>
