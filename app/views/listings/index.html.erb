<div class="page-header">
  <h1>
    Listings
    <a href="/listings/new" class="btn btn-lg btn-success">New Listing</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Listing title</th>
        <th>Listing description</th>
        <th>Room or home</th>
        <th>Listing photos</th>
        <th>Num of bedroom</th>
        <th>Num of bathroom</th>
        <th>Number of beds</th>
        <th>Max occupant</th>
        <th>City</th>
        <th>Neighbourhood</th>
        <th>Policies</th>
        <th>Default price</th>
        <th>Host</th>
        <th>Actions</th>
      </tr>

      <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.listing_title %></td>
        <td><%= listing.listing_description %></td>
        <td><%= listing.room_or_home %></td>
        <td><%= listing.listing_photos_id %></td>
        <td><%= listing.num_of_bedroom %></td>
        <td><%= listing.num_of_bathroom %></td>
        <td><%= listing.number_of_beds %></td>
        <td><%= listing.max_occupant %></td>
        <td><%= listing.city_id %></td>
        <td><%= listing.neighbourhood_id %></td>
        <td><%= listing.policies_id %></td>
        <td><%= listing.default_price %></td>
        <td><%= listing.host_id %></td>
        <td>
          <a href="/listings/<%= listing.id %>" class="btn btn-primary">Show</a>
          <a href="/listings/<%= listing.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_listing/<%= listing.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
