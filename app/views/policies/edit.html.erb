<!-- Validation failure messages -->
<% if @policy.errors.any? %>
  <% @policy.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Policy #<%= @policy.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_policy/<%= @policy.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for listing_id -->
      <div class="form-group">
        <label for="listing_id" class="control-label">
          Listing
        </label>

        <input type="text" id="listing_id" name="listing_id" placeholder="Listing" class="form-control" value="<%= @policy.listing_id %>">
      </div>

      <!-- Label and input for policies -->
      <div class="form-group">
        <label for="policies" class="control-label">
          Policies
        </label>

        <input type="text" id="policies" name="policies" placeholder="Policies" class="form-control" value="<%= @policy.policies %>">
      </div>

      <button class="btn btn-warning">
        Update Policy
      </button>
      or
      <a href="/policies/<%= @policy.id %>">Cancel</a>
    </form>
  </div>
</div>
