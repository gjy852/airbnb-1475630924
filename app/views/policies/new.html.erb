<!-- Validation failure messages -->
<% if @policy.errors.any? %>
  <% @policy.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Policy</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_policy" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for listing_id -->
      <div class="form-group">
        <label for="listing_id" class="control-label">
          Listing
        </label>

        <%= select_tag(:listing_id, options_from_collection_for_select(Listing.all, :id, :listing_title, @policy.listing_id), :class => "form-control") %>
      </div>

      <!-- Label and input for policies -->
      <div class="form-group">
        <label for="policies" class="control-label">
          Policies
        </label>

        <input type="text" id="policies" name="policies" placeholder="Policies" class="form-control" value="<%= @policy.policies %>">
      </div>

      <button class="btn btn-success">
        Create Policy
      </button>
      or
      <a href="/policies">Cancel</a>
    </form>
  </div>
</div>
