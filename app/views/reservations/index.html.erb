<div class="page-header">
  <h1>
    Reservations
    <a href="/reservations/new" class="btn btn-lg btn-success">New Reservation</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Availability date</th>
        <th>Availability price</th>
        <th>Listing</th>
        <th>Booked yes or no</th>
        <th>Actions</th>
      </tr>

      <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.availability_date %></td>
        <td><%= reservation.availability_price %></td>
        <td><%= reservation.listing_id %></td>
        <td><%= reservation.booked_yes_or_no_id %></td>
        <td>
          <a href="/reservations/<%= reservation.id %>" class="btn btn-primary">Show</a>
          <a href="/reservations/<%= reservation.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_reservation/<%= reservation.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
