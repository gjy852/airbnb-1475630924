<div class="page-header">
  <h3>Reservation #<%= @reservation.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Availability date</dt>
      <dd><%= @reservation.availability_date %></dd>

      <dt>Availability price</dt>
      <dd><%= @reservation.availability_price %></dd>

      <dt>Listing</dt>
      <dd><%= @reservation.listing_id %></dd>

      <dt>Booked yes or no</dt>
      <dd><%= @reservation.booked_yes_or_no_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/reservations" class="btn btn-primary">
        Back
      </a>
      <a href="/reservations/<%= @reservation.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_reservation/<%= @reservation.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
